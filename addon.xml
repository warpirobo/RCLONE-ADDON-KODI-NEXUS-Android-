<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.rclone" name="Rclone Addon" version="2.7.0" provider-name="AriosTV">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
	</requires>
	<extension point="xbmc.service" library="main.py">
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Run rclone when Kodi starts</summary>
		<description lang="en_GB">This script creates a webdav server from your remote using rclone, it also updates the Kodi library automatically when new files are added to the remote. Add your rclone.conf file to the profile directory</description>
		<platform>android</platform>
		<license>GNU GENERAL PUBLIC LICENSE Version 2</license>
		<platform>android</platform>
		<provides>
			<addon id="script.service.rclone" version="2.6.0"/>
		</provides>
		<extension point="xbmc.addon.metadata">
			<summary lang="en_GB">Rclone Addon</summary>
			<description lang="en_GB">Sync and serve remote files using rclone.</description>
			<platform>all</platform>
		</extension>
	</extension>
</addon>
